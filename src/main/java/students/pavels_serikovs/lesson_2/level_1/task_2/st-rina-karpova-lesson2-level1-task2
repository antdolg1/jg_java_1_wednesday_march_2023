package students.rina_karpova.lesson_2.level_1.task_2;

import java.util.Scanner;

class CalculatorDouble {

    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);

        System.out.print("Enter your first value: ");
        double firstValue = sc.nextDouble();

        System.out.print("Enter your second value: ");
         double secondValue= sc.nextDouble();

        double addition = firstValue + secondValue;
        double substraction = firstValue - secondValue;
        double multiplication = firstValue * secondValue;
        double division = firstValue / secondValue;
        System.out.println("Result of addition: " + firstValue + "+" + secondValue + " = " + addition);
        System.out.println("Result of substraction: " + firstValue + "-" + secondValue + " = " + substraction);
        System.out.println("Result of multiplication: " + firstValue + "*" + secondValue + " = " + multiplication);
        System.out.println("Result of division: " + firstValue + "/" + secondValue + " = " + division);

        sc.close();
        }
        }
